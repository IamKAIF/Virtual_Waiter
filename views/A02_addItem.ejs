    <script>
      const menuToggle = document.getElementById("menuToggle");
      const topHeader = document.querySelector(".top-header");
      
      menuToggle.addEventListener("click", function() {
        if (this.checked) {
          topHeader.classList.add("fixed-header");
        } else {
          topHeader.classList.remove("fixed-header");
        }
      });</script>
    <form class="addItem-form" method="post" action="/add" enctype="multipart/form-data">

      <!-- <input type="file" class="form-image" id="image" name="file" placeholder="Enter food item name"> -->
      <input id="UploadingImg" class="form-image" type="file"
        style="background-image: url('https://res.cloudinary.com/dwaxnnk8t/image/upload/v1683527971/UploadImage_zlxgqi.png');"
        name="file" placeholder="Enter food item name">
      <script>
        $("input").change(function (e) {
          var file = e.target.files[0]; // Get the first selected file
          var reader = new FileReader();
          reader.onloadend = function () {
            var dataURL = reader.result; // Get the data URL of the file
            $("#UploadingImg").css("background-image", "url(" + dataURL + ")"); // Set the background-image CSS property of the <input> element
          }
          reader.readAsDataURL(file);
        });
      </script>


      <div class="form-group">
        <div class="food-name">Food Name</div>
        <input type="text" class="form-control" id="food-name" name="name" placeholder="Enter food item name"
          accept=".xlsx">
      </div>


      <div class="form-group">
        <div class="food-price">Price</div>
        <input type="number" class="form-control" id="price" name="price" placeholder="Enter food item price">
      </div>


      <div class="form-group">
        <div class="form-description">Description</div>
        <textarea class="form-control" id="description" name="description" placeholder="Describe food item"></textarea>
      </div>

      <div class="form-group">
        <div class="form-ratings">Ratings</div>
        <input type="number" class="form-control" id="ratings" name="rating" step="any" placeholder="Enter food item rating">
      </div>

      <div class="form-group form-gp-category">
            <div class="form-category">Category</div>
            <select class="form-control" id="category" name="category">
              <option value="" hidden disabled selected >Choose a Category</option>
              <option value="Snacks">Snacks</option>
              <option value="Drinks">Drinks</option>
              <option value="Meals">Meals</option>
              <option value="Desserts">Desserts</option>
              <option value="Starters">Starters</option>
            </select>
          </div>

      <div class="form-group ">
        <div class="food-type">Food Type</div>
        <div class="foodItems"><input type="radio" class="btn-check" name="foodType" id="success" autocomplete="off" value="veg">
        <label class="btn btn-success foodTypeV" for="success">Veg</label>
        <input type="radio" class="btn-check" name="foodType" id="danger" autocomplete="off" value="non-veg">
        <label class="btn btn-danger foodTypeN" for="danger">Non-Veg</label>
      </div></div>

      <button type="submit" class="add-item-btn">Add Item</button>
    </form>
